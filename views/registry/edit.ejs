<%include ../partials/header%>
<div class="ui container">
    <h2><%= entry.item %></h2>
    <% if(entry.quantity > 1) { %> 
        <div>
            <%= entry.claims.length %> 
            <% if(entry.claims.length == 1) { %> 
                person has
            <% } else { %> 
                people have
            <% } %> 
             registered for this entry. Up to 
            <%= entry.quantity %> people can register.
        </div>
    <% } %> 
    <% if(!available) { %> 
        <p>                    
            this entry was claimed already. To unclaim, follow the delete 
            link sent via email.
        </p>
    <% } else { %>
        <form class="ui segment" action="/registry/<%=entry._id%>?_method=PUT" 
            method="post">
            <div>
                <label>claimed by: (only visible to Xenia and Ben for thank-you 
                    notes)</label>
                <input type="text" name="entry[from]" required>
            </div>
            <div>
                <label>your email address for the confirmation</label>
                <input type="text" name="emailAddress" required>
            </div>
            <div>
                <input class="ui button" type="submit" value="claim">
            </div>
        </form>
    <% } %>
    <img class="ui centered medium image" src="<%= entry.imgUrl %>"/>
</div>
<%include ../partials/footer%>

